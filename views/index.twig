{% extends 'layout.twig' %}
{% block title %} Index {% endblock %}

	{% block body %}

		<div class="row">
			<div class="col s12 m6">
				<div class="card 

				{% if global.ram.free > global.constant.REQUIRED_MEMORY %} green
				{% elseif global.ram.total > global.constant.REQUIRED_MEMORY %} orange
				{% else %} red lighten-2 
				{% endif %}">

				<div class="card-content white-text">
					<span class="card-title"><u>Mémoire vive </u> ( {{global.constant.REQUIRED_MEMORY}} Go requis )</span>
					Mémoire totale : {{global.ram.total}} Go<br>
					Mémoire disponible : {{global.ram.free}} Go <br>
				</div>

			</div>
		</div>
		<div class="col s12 m6">

			<div class="card 
			{% if global.java == 8 %} green
			{% elseif global.java == -1 %} red lighten-2
			{% else %} orange 
			{% endif %}">

			<div class="card-content white-text">
				<span class="card-title"><u>Java</u> ( version {{global.constant.JAVA_VERSION}} requise )</span>
				{% if global.java != -1 %}
					<p>La version actuellement installée est la version {{ global.java }}.</p>
				{% else %}
					<p>Aucune instance de java n'est actuellement installée.</p>
				{% endif %}
			</div>

		</div>
	</div>
	<div class="col s12 m6">

		<div class="card green">

			<div class="card-content white-text">
				<span class="card-title"><u>Fichiers </u> </span>
				{% for file in global.fileList %}
					{{file}}<br>
			{% endfor %}

			</div>

		</div>
	</div>

</div>

{% endblock %}
